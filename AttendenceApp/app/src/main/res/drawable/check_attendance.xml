<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2000dp" />
            <stroke android:width="1dp" android:color="#8c8989" />
            <gradient android:angle="-90" android:startColor="#706d6d" android:endColor="#737070"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2000dp" />
            <stroke android:width="1dp" android:color="#636161" />
            <solid android:color="#747171"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2000dp" />
            <stroke android:width="1dp" android:color="#6e6b6b" />
            <gradient android:angle="-90" android:startColor="#716d6d" android:endColor="#6b6868" />
        </shape>
    </item>
</selector>